<Page
	x:Class="Files.App.UITests.Views.GridStylePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:Files.App.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:here="Files.App.UITests.Views.GridStylePage"
	xmlns:local="using:Files.App.UITests.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Loaded="Page_Loaded"
	mc:Ignorable="d">

	<Page.Resources />

	<StackPanel Spacing="24">

		<controls:SamplePanel Header="Default usage">
			<controls:SamplePanel.MainContent>

				<GridView
					x:Name="SampleGridView"
					Padding="8,8,8,16"
					HorizontalAlignment="Stretch"
					BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
					BorderThickness="1"
					ItemsSource="{x:Bind Items}"
					SelectionMode="Multiple">

					<GridView.ItemContainerStyle>
						<Style BasedOn="{StaticResource DefaultGridViewItemStyle}" TargetType="GridViewItem">
							<Setter Property="Margin" Value="4" />
						</Style>
					</GridView.ItemContainerStyle>


					<GridView.ItemsPanel>
						<ItemsPanelTemplate>
							<VariableSizedWrapGrid
								Orientation="Horizontal"
								ItemWidth="240"/>
						</ItemsPanelTemplate>
					</GridView.ItemsPanel>


					<GridView.ItemTemplate>
						<DataTemplate x:DataType="local:MyItem">
							<StackPanel
								Margin="0"
								Padding="12"
								HorizontalAlignment="Center"
								Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
								Orientation="Vertical"
								Spacing="16">
								<Rectangle
									Width="32"
									Height="32"
									Fill="{Binding Color}" />
								<TextBlock
									HorizontalAlignment="Center"
									Style="{StaticResource BodyTextBlockStyle}"
									Text="{Binding Name}" />
							</StackPanel>
						</DataTemplate>
					</GridView.ItemTemplate>

				</GridView>

			</controls:SamplePanel.MainContent>



			<controls:SamplePanel.SideContent>
				<StackPanel
					HorizontalAlignment="Stretch"
					Orientation="Vertical"
					Spacing="24">
					<ComboBox
						x:Name="sideComboboxGridSelectionMode"
						HorizontalAlignment="Stretch"
						Header="Selection Mode"
						SelectedIndex="2"
						SelectionChanged="sideComboboxGridSelectionMode_SelectionChanged">
						<x:String>None</x:String>
						<x:String>Single</x:String>
						<x:String>Multiple</x:String>
						<x:String>Extended</x:String>
					</ComboBox>
				</StackPanel>
			</controls:SamplePanel.SideContent>
		</controls:SamplePanel>

	</StackPanel>
</Page>
